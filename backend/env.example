# Environment Variables Example
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/badeel_platform
MONGODB_URI_PROD=

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_2024
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=Badeel Platform <noreply@badeel.com>

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# File Upload Configuration
MAX_FILE_UPLOAD=10485760
FILE_UPLOAD_PATH=./uploads

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Configuration
BCRYPT_SALT_ROUNDS=10
SESSION_SECRET=your_session_secret_change_this_in_production_2024

# Admin Default Configuration
